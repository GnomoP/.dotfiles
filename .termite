[options]
allow_bold = true
audible_bell = false
clickable_url = true
dynamic_title = true
hyperlinks = true
icon_name = terminal
mouse_autohide = true
scroll_on_output = false
scroll_on_keystroke = true

# Length of the scrollback buffer, 0 disabled the scrollback buffer
# and setting it to a negative value means "infinite scrollback"
scrollback_lines = -1

# "system", "on" or "off"
cursor_blink = on

# "block", "underline" or "ibeam"
cursor_shape = block

# Hide links that are no longer valid in url select overlay mode
filter_unmatched_urls = true

# "off", "left" or "right"
scrollbar = off

font = Menlo for Powerline 10

#fullscreen = true
#search_wrap = true
#urgent_on_bell = true

# $BROWSER is used by default if set, with xdg-open as a fallback
#browser = xdg-open

# Emit escape sequences for extra modified keys
#modify_other_keys = false

# set size hints for the window
#size_hints = false

[colors]

# Cursor
# If both of these are unset, cursor falls back to the foreground color,
# and cursor_foreground falls back to the background color.
#cursor =            #DCDCCC
#cursor_foreground = #DCDCCC

# Selection
# If unset, will reverse foreground and background
highlight = #2F2F2F

# Background
# 15% background transparency (requires a compositor)
background = rgba(40, 42, 56, 0.85)

# Text
foreground =      #EFF0EB
foreground_bold = #EFF0EB

# Other default termite colors
color0  = #282A38
color8  = #282A38

color1  = #FF5C57
color9  = #FF5C57

color2  = #5AF78E
color10 = #5AF78E

color3  = #F3F99D
color11 = #F3F99D

color4  = #57C7FF
color12 = #57C7FF

color5  = #FF6AC1
color13 = #FF6AC1

color6  = #9AEDFE
color14 = #9AEDFE

color7  = #F1F1F0
color15 = #F1F1F0
