#!/bin/bash
# shellcheck disable=SC1091
# shellcheck source=/dev/null

## Ensure these flags aren't set. At all
set +u
set +e

[[ -n "$SRC" ]] &&\
  SRC="$HOME/src"

export PATH="$HOME/bin:$SRC/bin:$PATH"

_srcinitexc () {
  while read -sr -d '' file; do
    [[ -z "$file" ]] ||\
    [[ ! -f "$file" ]] &&\
      continue

    local EXECUTE='true'
    while read -sr pattern; do
      [[ -z "$pattern" ]] ||\
      grep -qE '^#' <<< "$pattern" &&\
        continue

      local filename
      filename="$(sed -E 's/^\/root\/src\///g' <<< "$file")"

      if [[ "$(perl "$SRC/_match" "$pattern" "$filename")" -eq 1 ]]; then
        [[ -n "$REFRESH_SHELL" ]] && echo "- '$file'" | perl "$SRC/_color"
        EXECUTE=''
      fi
    done < "$SRC/_ignore"

    [[ -n "$EXECUTE" && -f "$file" ]] &&
      if source "$file"; then
        [[ -n "$REFRESH_SHELL" ]] &&\
          echo "+ '$file'" | perl "$SRC/_color"
      else
        echo "! '$file'" | perl "$SRC/_color"
      fi
  done < <(find "$SRC/exec/" -follow -type f -print0 | sort)
} && _srcinitexc
unset -f _srcinitexc

append-path "./"

## Custom aliases
if [[ -f "$HOME/.bash_aliases" ]]; then
  # shellcheck source=/root/.bash_aliases
  source "$HOME/.bash_aliases"
fi

## Shortcut to GnomoP (USB stick)
if [[ -d "/media/$(whoami)/GnomoP" ]]; then
  ln -sf "/media/$(whoami)/GnomoP" "$HOME/usb"
else
  [[ -s "$HOME/usb" ]] && rm -f "$HOME/usb"
fi

## Environmental variables
export EDITOR='/usr/bin/vim'
export VISUAL='/usr/bin/code'

## Bindings
bind 'set show-all-if-ambiguous on'
bind 'TAB:menu-complete'
